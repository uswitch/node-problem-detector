{
  "plugin": "custom",
  "pluginConfig": {
    "invoke_interval": "5s",
    "timeout": "4s",
    "max_output_length": 80,
    "concurrency": 1
  },
  "source": "termination-custom-plugin-monitor",
  "conditions": [
    {
      "type": "TerminationScheduled",
      "reason": "TerminationUnScheduled",
      "message": "termination is unscheduled"
    }
  ],
  "rules": [
    {
      "type": "permanent",
      "condition": "TerminationScheduled",
      "reason": "TermincationScheduled",
      "path": "./config/plugin/spot_termination.sh",
      "timeout": "4s"
    }
  ]
}
